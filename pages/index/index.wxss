.mode-item{
    box-shadow:inset 0px 1px 0px 0px #ffffff;
	background:linear-gradient(to bottom, #ededed 5%, #dfdfdf 100%);
	background-color:#ededed;
	border-radius:10px;
	border:1px solid #dcdcdc;
	cursor:pointer;
	color:#595959;
    width: 120rpx;
    height: 80rpx;
    margin-top: 30rpx;
    line-height: 96%;
	/* text-decoration:none; */
    display: flex;
    justify-content: center;
    align-items: center;
}
.mode-item text{
    font-size:30rpx;
    text-shadow:0px 1px 0px #ffffff;
}

.mode-item-chosed{
    text-shadow: transparent;
    color: white;
    background: #67c23a;
}

.btn{
    box-shadow: 0px 10px 14px -7px #949494;
	border-radius:20px;
	cursor:pointer;
	color:#ffffff;
	font-family:Arial;
	font-size:34rpx;
	font-weight:bold;
    width:200rpx;
    height: 80rpx;
	text-decoration:none;
    text-shadow:0px 1px 0px #3d768a;
    display: flex;
    justify-content: center;
    align-items: center;
}

.setting-wrap{
    width: 100%;
    height: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    transition: all .3s ease;
}
.setting-wrap-hide{
    transform: translateY(100%)
}
.setting-cont{
    width: 100%;
    height: 1000rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background: white;
    box-shadow: 0 2px 4px 4px lightgray;
}
.setting-btn-wrap{
    padding: 40rpx;
    display: flex;
    justify-content: space-between;
}
.setting-btn{
    margin: 0;
}
.setting-list{
    margin-top: 10rpx;
}
.setting-list-item{
    padding: 15rpx 36rpx;
    display: flex;
    align-items: center;
}
.slider-label{
    flex: 0 0 120rpx;
    font-size: 36rpx;
    text-align: right;
}
.slider-item{
    flex: 1;
}
